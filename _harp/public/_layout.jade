doctype html
html
  head
    meta( charset='utf-8' )
    meta( http-equiv='X-UA-Compatible', content='IE=edge' )
    title 
      = title
    meta( name='viewport', content='width=device-width, initial-scale=1' )
    link( rel='stylesheet', type='text/css', href="/stylesheets/styles.css" )
    link( rel='stylesheet', type='text/css', href='/javascripts/highlight/styles/github.css' )
    script( src='/javascripts/highlight/highlight.pack.js' )
    script.
      hljs.initHighlightingOnLoad();
    link( rel="icon", type="image/x-icon", href="/favicon.ico" )

    // [if lt IE 9]
      script( src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js' )
      script( src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js' )

    script( src='https://google-code-prettify.googlecode.com/svn/loader/run_prettify.js' )
  body
    .navbar.navbar-default( role='navigation' )
      .container-fluid
        .navbar-header
          button.navbar-toggle( type='button', data-toggle='collapse', data-target='.navbar-collapse' )
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand( href='http://projectodd.org' )
            img(src="/images/projectodd-logo.png")

        .navbar-collapse.collapse
          ul.nav.navbar-nav
            li
              a( href='/' ) Blog
    .container
      .row
        .col-md-8
          .post
            .meta
              h1
                != title
              h2
                != author
              h3
                != date
            .content
              != yield
              - if (current.source != 'index' && current.source != '404')
                 != partial('_disqus')

        .col-sm-3.col-sm-offset-1.blog-sidebar
          .sidebar-module.archives
            h4 Archives
            ul
              for post, slug in public._data
                if ( slug != 'index' )
                  li
                    a(href="/#{ slug }.html")
                      = post.title 
                      .smaller 
                        = post.date
    .container
      .footer.well
